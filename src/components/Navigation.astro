---
import "../../public/styles/global.css";

const siteUrl = process.env.ASTRO_SITE_URL || "http://localhost:4321";
---

<nav>
  <ul class="nav-links">
    <!-- <li><a href={`${siteUrl}/`}>Inicio</a></li> -->
    <li class="link-logo">
      <a href={`${siteUrl}/`}
        ><img src={`${siteUrl}/favicon.svg`} alt="gorro de cocinero" /></a>
    </li>
    <li class="link-home"><a href={`${siteUrl}/`}>Inicio</a></li>
    <li><a href={`${siteUrl}/saladas`}>Recetas saladas</a></li>
    <li><a href={`${siteUrl}/dulces`}>Recetas dulces</a></li>
  </ul>
</nav>

<style>
  .nav-links {
    list-style: none;
    list-style-type: none;
    display: none;
    flex-direction: column;
    flex-flow: column wrap;

    flex-basis: 100%;
    top: 5rem;
    /* left: 48px; */
    /* left: 0;*/
    background-color: var(--color-2-light);

    margin: 0;
    padding: 0;
    gap: 1.5rem;
    align-items: center;
  }

  .nav-links a {
    display: block;
    text-align: center;

    text-decoration: none;
    font-size: 1.5rem;
    font-weight: bold;
    text-transform: uppercase;
    background-color: var(--color-2-light);
  }

  .nav-links a:hover,
  .nav-links a:focus {
    background-color: var(--color-2-light);
    border-radius: 7px;
    color: var(--title-color);
  }

  .link-logo {
    display: none;
  }

  .expanded {
    display: unset;
    /*display: block;*/
  }

  @media screen and (min-width: 636px) {
    .nav-links {
      display: flex;
      flex-direction: row;
      margin-left: 5em;

      position: static;
      width: auto;
      background: none;
    }

    .nav-links a {
      display: inline-block;
      padding: 15px 20px;
      background-color: var(--bg-color);
    }

    .link-home {
      display: none;
    }
    .link-logo{
      display: block;
    }
    .hamburger {
      display: none;
    }
  }
</style>
