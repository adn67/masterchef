---
import BaseLayout from "../layouts/BaseLayout.astro";
import FoodCategory from "../components/FoodCategory.astro";
import "../../public/styles/global.css";
const pageTitle = "Las recetas de Po";

const listaDulces = await Astro.glob("../pages/recetario/dulces/*/*.md");

// Astro.glob es una función asíncrona que retorna una promesa. Busca los archivos que cumplan con los criterios que pasemos como parámetros (en este caso, todas las recetas dulces).
---

<BaseLayout pageTitle={pageTitle}>
 

  <div class="container">
    <ul class="lista-recetas">
      {
        listaDulces.map((receta) => (
          <li>
            <a href={receta.url}>{receta.frontmatter.title}</a>
          </li>
        ))
      }
    </ul>
   
  </div>
</BaseLayout>

<style>
  .container {
    max-width: 80vw;
    margin: 0 auto;
  }
  .lista-recetas {
    list-style: none;
    margin-left: 1em;
  }

  a {
    text-decoration: none;
  }
  a:hover {
    color: var(--txt-color);
  }


</style>
